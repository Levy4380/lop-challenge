{{ 'section-lop-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid

-%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="lop-banner-wrapper page-width isolate{% if section.settings.title == blank %} no-heading{% endif %} section-{{ section.id }}-padding">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link{% if show_mobile_slider %} title-wrapper--self-padded-tablet-down{% else %} title-wrapper--self-padded-mobile{% endif %} title-wrapper--no-top-margin">
        <h2
          id="SectionHeading-{{ section.id }}"
          class="lop-banner--title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        >
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endunless -%}
    <div class="blocks-container">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'banner-with-slider' %}
            <div class="banner-with-slider-wrapper block-item">
              <div
                class="slide-container {% if block.settings.image_1 != blank %} media-container {% else %} --with-placeholder{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                style="--animation-order: 1;"
              >
                <div class="slide-image ">
                  {% if block.settings.image_1 != blank %}
                    {% render 'responsive-image', image: block.settings.image_1 %}
                  {% else %}
                    {{ 'collection-apparel-3' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </div>
                <div class="content vertical-alignment--{{block.settings.vertical_alignment}} lateral-alignment--{{block.settings.lateral_alignment}} ">
                  <span class="content-heading">Lorem ipsum</span>
                </div>
              </div>
              <div
                class="slide-container {% if block.settings.image_2 != blank %} media-container {% else %} --with-placeholder{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                style="--animation-order: 2;"
              >
                <div class="slide-image ">
                  {% if block.settings.image_2 != blank %}
                    {% render 'responsive-image', image: block.settings.image_2 %}
                  {% else %}
                    {{ 'collection-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </div>
                <div class="content vertical-alignment--{{block.settings.vertical_alignment}} lateral-alignment--{{block.settings.lateral_alignment}}">
                  <span class="content-heading">Lorem ipsum</span>
                </div>
              </div>
              <div
                class="slide-container  {% if block.settings.image_3 != blank %} media-container {% else %} --with-placeholder{% endif %} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                style="--animation-order: 3;"
              >
                <div class="slide-image">
                  {% if block.settings.image_3 != blank %}
                    {% render 'responsive-image', image: block.settings.image_3 %}
                  {% else %}
                    {{ 'collection-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </div>
                <div class="content vertical-alignment--{{block.settings.vertical_alignment}} lateral-alignment--{{block.settings.lateral_alignment}}">
                  <span class="content-heading">Lorem ipsum</span>
                </div>
              </div>
            </div>
          {% when 'static-banner' %}
            {% liquid
              assign image_1_ratio = block.settings.image_1.aspect_ratio
              assign image_2_ratio = block.settings.image_2.aspect_ratio
              assign max_ratio = image_1_ratio

              if image_2_ratio > block.settings.image_1.aspect_ratio
                assign max_ratio = image_2_ratio
              endif
            %}
            <div
              class="static-banner-container block-item {{ max_ratio }}"
              id="static-banner--{{ forloop.index }}"
              style="--placeholder-height: {{ 85 | divided_by: max_ratio  }}dvw"
            >
              <div
                class="banner-container {% if block.settings.image_1 != blank %} media-container {% else %} --with-placeholder{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                style="--animation-order: 1;"
              >
                <div class="banner-image ">
                  {% if block.settings.image_1 != blank %}
                    {% render 'responsive-image', image: block.settings.image_1 %}
                  {% else %}
                    {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </div>
                <div class="content vertical-alignment--{{block.settings.vertical_alignment}} lateral-alignment--{{block.settings.lateral_alignment}}">
                  <span class="content-heading">Lorem ipsum</span>
                </div>
              </div>
              <div
                class="banner-container  {% if block.settings.image_2 != blank %} media-container {% else %} --with-placeholder{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                style="--animation-order: 2;"
              >
                <div class="banner-image">
                  {% if block.settings.image_2 != blank %}
                    {% render 'responsive-image', image: block.settings.image_2 %}
                  {% else %}
                    {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </div>
                <div class="content vertical-alignment--{{block.settings.vertical_alignment}} lateral-alignment--{{block.settings.lateral_alignment}}">
                  <span class="content-heading">Lorem ipsum</span>
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

<script defer="defer">
  if (window.innerWidth < 991) {
    $('.banner-with-slider-wrapper').slick({
      dots: true,
      infinite: false,
      speed: 300,
      mobileFirst: true,
      slidesToShow: 1,
      slidesToScroll: 1,
      infinite: true,
    });
  }
</script>

